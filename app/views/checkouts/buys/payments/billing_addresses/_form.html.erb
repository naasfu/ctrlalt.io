<%= simple_form_for [:checkouts, :buys, :payments, @billing_address], url: checkouts_buys_payments_billing_address_path, remote: true, method: :patch, html: { id: 'edit_billing_address' } do |f| %>
  <div class="modal-body">
    <%= f.input :street1, label: "Address line 1", placeholder: "Street address, P.O. box, company name, c/o" %>
    <%= f.input :street2, label: "Address line 2", placeholder: "Apartment, suite, unit, building, floor, etc" %>

    <div class="row">
      <div class="col-xs-5">
        <%= f.input :city %>
      </div>
      <div class="col-xs-7">
        <%= f.input :state, label: "State/Province/Region" %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-5">
        <%= f.input :zip %>
      </div>
      <div class="col-xs-7">
      <%= f.input :country, collection: CountrySelectPresenter.options, selected: @billing_address.country %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit "Save", class: "btn btn-success-o", data: { 'loading-text' => 'Saving...', toggle: :loading } %>
  </div>
<% end %>