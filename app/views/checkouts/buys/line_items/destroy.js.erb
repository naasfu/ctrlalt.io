<% if current_cart.is_empty? %>

  $('#cart').html('<%= j render "checkouts/carts/empty_cart" %>');
  
<% else %>

  $('#<%= dom_id @line_item, :cart %>').remove();

<% end %>

$('#totals_panel').velocity({ opacity: 1 }, { duration: 200 });

$('.line-items-total').html('<%= number_to_currency current_cart.line_items_total %>');
$('.line-items-count').html('<%= pluralize current_cart.line_items_count, "item" %>');

