<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
  <div class="product-thumbnail">
    <%= link_to image_tag(product.image_url(:sm_square), class: 'img-responsive img-rounded'), store_product_path(product) %>
    
    <% if product.out_of_stock? %>
      <div class="out-of-stock">
        <span class="label label-danger">OUT OF STOCK</span>
      </div>
    <% end %>
  </div>
  <h4 class="m-b-0"><%= link_to product.name, store_product_path(product) %></h4>
  <p class="price price-md">
    <%= product_price_range product %>
  </p>
</div>
