<%= content_tag :div, id: dom_id(bro_line_item, :cart), class: 'list-group-item' do %>
    <div class="media">
      <div class="pull-left">
        <%= image_tag bro_line_item.image_url(:sm), width: 50, class: "media-object" %>
        <%= sortable_handle %>
        <%= link_to icon("times fa-fw"), checkouts_bros_bro_line_item_path(bro_line_item), class: "text-danger", method: :delete, remote: true %>
      </div>
      <div class="media-body">
        <p class="media-heading">
          <strong><%= bro_line_item.product_name %> (<%= bro_line_item.bro_sale_name %>)</strong>
          <br>

          <%= number_to_currency bro_line_item.unit_price %>
          <small>&mdash; <%= bro_line_item.variant_name %></small>
          <% if bro_line_item.color.present? %>
            <br>
            <small>&mdash; <%= bro_line_item.color %></small>
          <% end %>
        </p>
      </div>
    </div>

<% end %>