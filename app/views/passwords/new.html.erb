<% provide :meta_title, 'Forgot your password?' %>
<% provide :page_title, 'Forgot your password?' %>
<% provide :page_description, "Enter your email address below and we'll send you a link to reset your password" %>

<div class="row">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_tag passwords_path do %>

          <div class="form-group">
            <%= label_tag :email, 'Email' %>
            <%= text_field_tag :email, params[:email], placeholder: 'your@email.com', class: 'form-control' %>
          </div>

          <div class="text-right">
            <%= link_to 'Log in', login_path, class: 'btn btn-link' %>
            <%= link_to 'Sign up', signup_path, class: 'btn btn-link' %>
            <%= submit_tag 'Reset password', class: 'btn btn-success-o' %> 
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
