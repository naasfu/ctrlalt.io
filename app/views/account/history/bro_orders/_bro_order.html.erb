<div class="list-group-item">
  <div class="row">
    <div class="col-xs-5 col-sm-6 col-md-4">
      <%= link_to "##{bro_order.guid}", account_history_bro_order_path(bro_order) %>
    </div>
    <div class="col-xs-7 col-sm-6 col-md-3">
      <%= local_time(bro_order.paid_at || bro_order.placed_at || bro_order.created_at, format: :readable_date) %>
    </div>
    <div class="col-xs-5 col-sm-6 col-md-2">
      <%= workflow_label(bro_order) %>
    </div>
    <div class="col-xs-7 col-sm-6 col-md-3">
      <% if bro_order.is_winner? %>
        <span class="price">
          <%= number_to_currency(bro_order.grand_total) %>
        </span>
      <% end %>
    </div>
  </div>
</div>
