<%= content_tag_for :div, group_buy_image, class: 'block-grid-image' do %>
  <div class="block-controls">
    <div class="btn-group">
      <%= link_to icon('arrows fa-fw'), '#/', class: 'btn btn-xs btn-default-o move' %>
      <%= link_to icon('times fa-fw'), admin_group_buy_image_path(group_buy_image.group_buy, group_buy_image), method: :delete, remote: true, class: 'btn btn-xs btn-danger' %>
    </div>
  </div>
  <%= image_tag group_buy_image.file_url(:sm_square), class: 'img-rounded img-responsive' %>
<% end %>
