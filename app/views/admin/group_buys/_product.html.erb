<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= link_to product.name, "#product_#{product.id}_variants", data: { toggle: 'collapse' } %>
      <%= link_to icon('plus', 'New Variant'), new_admin_group_buy_product_variant_path(product.group_buy, product), class: 'pull-right' %>
    </h3>
  </div>

  <div class="table-responsive collapse in" id="product_<%= product.id %>_variants">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th width="40%">Variant</th>
          <th width="20%">Sold</th>
          <th width="20%">Price</th>
          <th width="20%">Total</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'admin/group_buys/variant', collection: product.variants.sorted %>
      </tbody>
    </table>
  </div>
</div>