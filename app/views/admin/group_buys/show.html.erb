<% provide :meta_title, 'Stats' %>

<% provide :breadcrumbs do %>
  <li><%= link_to 'Group Buys', admin_group_buys_path %></li>
  <li><%= link_to @group_buy.name, admin_group_buy_path(@group_buy) %></li>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="btn-toolbar">
      <div class="btn-group">
        <%= link_to icon('pencil', 'Details'), edit_admin_group_buy_path(@group_buy), class: 'btn btn-default' %>
      </div>
      <div class="btn-group">
        <%= link_to icon('tags', 'Products'), admin_group_buy_products_path(@group_buy), class: 'btn btn-default' %>
        <%= link_to icon('plus'), new_admin_group_buy_product_path(@group_buy), class: 'btn btn-default' %>
      </div>
      <div class="btn-group">
        <%= link_to icon('inbox', 'Orders'), admin_group_buy_orders_path(@group_buy), class: 'btn btn-default' %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-12 col-sm-3">
        <h3 class="m-y-0">
          <%= @group_buy.days_left %>
        </h3>
        <span class="text-muted">days left</span>
      </div>

      <div class="col-xs-12 col-sm-3">
        <h3 class="m-y-0">
          <%= @group_buy.total_orders %>
        </h3>
        <span class="text-muted">orders</span>
      </div>

      <div class="col-xs-12 col-sm-3">
        <h3 class="m-y-0">
          <%= @group_buy.total_participants %>
        </h3>
        <span class="text-muted">participants</span>
      </div>

      <div class="col-xs-12 col-sm-3">
        <h3 class="m-y-0">
          <%= number_to_currency @group_buy.grand_total %>
        </h3>
        <span class="text-muted">total</span>
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th width="40%">Details</th>
          <th width="20%">Total</th>
          <th width="40%">Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render @orders, group_buy: @group_buy %>
      </tbody>
    </table>
  </div>
</div>

<%= render partial: 'admin/group_buys/product', collection: @products %>