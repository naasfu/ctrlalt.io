<%= simple_form_for [:admin, @faq_category, @faq] do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= link_to 'Back', admin_faq_category_path(@faq_category), class: 'btn btn-default-o' %>
      <%= f.submit class: 'btn btn-success-o pull-right' %>
    </div>
    <div class="panel-body">
      <%= f.error_notification %>

      <div class="row">
        <div class="col-xs-12 col-sm-3">
          <h4 class="m-y-0">FAQ</h4>
        </div>

        <div class="col-xs-12 col-sm-9">
          <%= f.input :q, input_html: { rows: 6 } %>
          <%= f.input :a, input_html: { rows: 9 } %>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-12 col-sm-3">
          <h4 class="m-y-0">Categorey</h4>
        </div>

        <div class="col-xs-12 col-sm-9">
          <%= f.association :category, prompt: "Choose a category" %>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-12 col-sm-3">
          <h4 class="title">Settings</h4>
        </div>
        <div class="col-xs-12 col-sm-9">
          <%= f.input :slug %>
          <%= f.input :visible %>
          <%= f.input :active %>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <%= link_to 'Back', admin_faq_category_path(@faq_category), class: 'btn btn-default-o' %>
      <%= f.submit class: 'btn btn-success-o pull-right' %>
    </div>
  </div>
<% end %>
