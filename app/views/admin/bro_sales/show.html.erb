<% provide :meta_title, 'Stats' %>

<% provide :breadcrumbs do %>
  <li><%= link_to 'Sales', admin_bro_sales_path %></li>
  <li><%= link_to @bro_sale.name, admin_bro_sale_path(@bro_sale) %></li>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="btn-toolbar">
      <div class="btn-group">
        <%= link_to icon('pencil', 'Details'), edit_admin_bro_sale_path(@bro_sale), class: 'btn btn-default-o' %>
      </div>
      <div class="btn-group">
        <%= link_to icon('tags', 'Products'), admin_bro_sale_products_path(@bro_sale), class: 'btn btn-default-o' %>
        <%= link_to icon('plus'), new_admin_bro_sale_product_path(@bro_sale), class: 'btn btn-default-o' %>
      </div>
      <div class="btn-group">
        <%= link_to icon('inbox', 'Orders'), admin_bro_sale_orders_path(@bro_sale), class: 'btn btn-default-o' %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-12 col-sm-3">
        <h3 class="m-y-0">
          <%= @bro_sale.days_left %>
        </h3>
        <span class="text-muted">days left</span>
      </div>

      <div class="col-xs-12 col-sm-3">
        <h3 class="m-y-0">
          <%= @bro_sale.total_orders %>
        </h3>
        <span class="text-muted">orders</span>
      </div>

      <div class="col-xs-12 col-sm-3">
        <h3 class="m-y-0">
          <%= @bro_sale.total_participants %>
        </h3>
        <span class="text-muted">participants</span>
      </div>

      <div class="col-xs-12 col-sm-3">
        <h3 class="m-y-0">
          <%= number_to_currency @bro_sale.grand_total %>
        </h3>
        <span class="text-muted">total</span>
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th width="40%">Details</th>
          <th width="20%">Total</th>
          <th width="40%">Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render @bro_orders, bro_sale: @bro_sale %>
      </tbody>
    </table>
  </div>
</div>

<%= render partial: 'admin/bro_sales/bro_product', collection: @products %>