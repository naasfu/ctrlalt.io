<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= link_to bro_product.name, "#bro_product_#{bro_product.id}_variants", data: { toggle: 'collapse' } %>
      <%= link_to icon('plus', 'New Variant'), new_admin_bro_sale_product_variant_path(bro_product.bro_sale, bro_product), class: 'pull-right' %>
    </h3>
  </div>

  <div class="table-responsive collapse in" id="bro_product_<%= bro_product.id %>_variants">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th width="40%">Variant</th>
          <th width="15%">Submitted</th>
          <th width="15%">Winners</th>
          <th width="15%">Price</th>
          <th width="15%">Total</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'admin/bro_sales/bro_variant', collection: bro_product.variants.sorted %>
      </tbody>
    </table>
  </div>
</div>