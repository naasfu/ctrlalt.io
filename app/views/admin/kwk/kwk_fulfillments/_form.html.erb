<%= simple_form_for [:admin, :kwk, @order, @fulfillment], remote: true, url: admin_kwk_order_fulfillments_path(@order) do |f| %>
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
      <h4 class="modal-title">New Fulfillment</h4>
    </div>

    <div class="modal-body">
      <div class="row">
        <div class="col-xs-12 col-sm-6">

          <div class="list-group">
            <%= render partial: "kwk_line_items/kwk_line_item", collection: @line_items, as: :kwk_line_item %>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6">
          <%= f.input :tracking_number, wrapper: :vertical_input_group do %>
            <span class="input-group-addon">#</span>
            <%= f.input_field :tracking_number, class: "form-control" %>
          <% end %>
          <%= f.input :notes %>
          <%= f.input :customer_notes, hint: "Customer notes are sent to customer via email and displayed on their ticket page." %>
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.submit class: 'btn btn-success-o' %>
    </div>
  </div>
<% end %>