<% provide :meta_title, 'Carousels' %>

<div class="row">
  <div class="col-xs-12 col-md-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_tag admin_carousels_path, method: :post, class: 'dropzone-images', multipart: true, remote: true, authenticity_token: true do %>
          <div class="dropzone-catch">
            <i class="fa fa-upload fa-2x"></i>
            <br>
            <span class="text-muted">Drag images here to upload</span>
          </div>
          <%= render 'admin/shared/dropzone' %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Images</h4>
      </div>
      <div class="panel-body">
        <div id="images" class="block-grid sortable-block-grid" data-update-url="<%= admin_sort_path(class_name: "carousel") %>">
          <%= render @carousels %>
        </div>
      </div>
    </div>
  </div>
</div>