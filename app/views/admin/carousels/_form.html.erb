<%= simple_form_for [:admin, @carousel], remote: true do |f| %>
  <div class="modal-body">
    <%= f.input :title %>
    <%= f.input :url %>
    <%= f.input :caption, input_html: { rows: 5 } %>
  </div>
  <div class="modal-footer">
    <%= f.submit class: "btn btn-block btn-success-o" %>
  </div>
<% end %>