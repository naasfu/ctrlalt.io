// Update fulfillment
$('#notifications').prepend('<%= j render "layouts/notifications" %>');
$('#bro_fulfillment_<%= @fulfillment.id %>').replaceWith('<%= j render @fulfillment %>');
$('#edit_fulfillment_<%= @fulfillment.id %>_modal').modal('toggle');

// Reset loading button once the dialog loads.
$('[data-toggle=loading]').button('reset');
$('[data-toggle=loading]').click(function(){
  $(this).button('loading');
});