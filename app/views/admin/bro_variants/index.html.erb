<% provide :meta_title, 'Variants' %>

<% provide :breadcrumbs do %>
  <li><%= link_to 'Sales', admin_bro_sales_path %></li>
  <li><%= link_to @bro_sale.name, admin_bro_sale_path(@bro_sale) %></li>
  <li><%= link_to 'Products', admin_bro_sale_products_path(@bro_sale) %></li>
  <li><%= link_to @product.name, edit_admin_bro_sale_product_path(@bro_sale, @product) %></li>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to icon('plus', 'New Variant'), new_admin_bro_sale_product_variant_path(@bro_sale, @product), class: 'btn btn-primary-o' %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th width="35%">Name</th>
          <th width="25%">Price</th>
          <th width="40%">Actions</th>
        </tr>
      </thead>
      <tbody class="sortable-table" data-update-url="<%= admin_sort_path(class_name: 'bro_variant') %>">
        <%= render @variants %>
      </tbody>
    </table>
  </div>
</div>
