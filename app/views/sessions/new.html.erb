<% provide :meta_title, 'Log in' %>
<% provide :page_title, 'Log in' %>
<% provide :page_description, 'Log in to your account to access order history and support' %>

<div class="row">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <div class="panel panel-default m-y-0">
      <div class="panel-body">
        <%= render 'form' %>
      </div>
      <div class="panel-footer">
        <%= link_to 'Forgot password?', new_password_path, class: 'btn btn-link' %>
        <%= link_to 'Sign up', signup_path, class: 'btn btn-link' %>
      </div>
    </div>
  </div>
</div>
