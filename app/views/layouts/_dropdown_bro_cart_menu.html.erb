<ul class="dropdown-menu dropdown-menu-right dropdown-list-group dropdown-bro-cart-menu">
  <div class="panel panel-default m-y-0">
    <% if current_bros.is_empty? %>
      <div class="panel-body">
        <h5 class="m-y-0 text-center">There are no bros in your cart!</h5>
      </div>
    <% else %>
      <div class="list-group">
        <%= render partial: 'bro_line_items/cart_line_item', collection: current_bros.line_items.sorted, as: :bro_line_item %>
      </div>
      <div class="panel-footer text-right">
        <%= link_to 'Checkout', checkout_bros_cart_path, class: 'btn btn-success-o' %>
      </div>
    <% end %>
  </div>
</ul>
