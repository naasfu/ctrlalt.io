<%= content_tag :div, class: "list-group-item", id: dom_id(bro_line_item) do %>
  
  <div class="media m-y-0">

    <div class="media-left">
      <%= image_tag bro_line_item.image_url(:sm), width: "64px", class: "media-object" %>
    </div>

    <div class="media-body">
      <h5 class="m-y-0"><%= bro_line_item.product_name %></h5>
      &mdash; <%= bro_line_item.variant_name %> (<%= bro_line_item.bro_sale_name %>)
      <br>
      <% if bro_line_item.color.present? %>
        <br>
        <small>&mdash; <%= bro_line_item.color %></small>
      <% end %>

      <span class="price">
        <%= number_to_currency bro_line_item.unit_price %>
      </span>

      <% if bro_line_item.tru_bro_id.present? %>
        &mdash; 
        <span class="label label-trubroid" data-toggle="tooltip" data-original-title="Your Tru-Bro identification number"><%= bro_line_item.tru_bro_id %></span>
      <% end %>
    </div>
  </div>

<% end %>


