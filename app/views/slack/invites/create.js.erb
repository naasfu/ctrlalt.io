<% if @invite.errors.any? %>
  $('#new_slack_invite').replaceWith('<%= j render "form" %>');
<% else %>
  $('#new_slack_invite').animate({height:0, opacity:0}, 'slow', function() {
    $(this).replaceWith('<%= j render "slack/invites/success_message" %>');
  });
<% end %>

$('#notifications').html('<%= j render "layouts/notifications" %>');
